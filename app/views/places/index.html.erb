<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
    city <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search" %>
<% end %>

<% if @weather %>
    <p>
    <strong>The current beer weather in <%= @weather["location"]["name"] %>:</strong>
    <p><img src="http://<%= @weather["current"]["condition"]["icon"] %>"/></p>
    <p><%= @weather["current"]["temp_c"] %> Celsius, feels like <%= @weather["current"]["feelslike_c"] %></p>
    </p>
<% end %>

<% if @places %>
    <strong>Places to get beer:</strong>


    <table>
      <thead>
      <% Place.rendered_fields.each do |f| %>
          <td><%= f %></td>
      <% end %>
      </thead>
      <% @places.each do |place| %>
          <tr>
            <% Place.rendered_fields.each do |f| %>
                <td><%= link_to place.send(f), "places/" + place.id.to_s %></td>
            <% end %>
            <!--<td><%= link_to "see", "places/" + place.id.to_s %></td>-->
          </tr>
      <% end %>
    </table>
<% end %>
